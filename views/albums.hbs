<h1 class="is-centered">Albums</h1>
<p class="is-centered">Click on an album to see all tracks</p>
<div class="flex-list">
  {{#data}}
  {{#each items}}
  <div class="item">
    <div class="image-box">
      <img src="{{#if images.[0].url}}{{images.[0].url}}{{else}}/no-image.png{{/if}}" alt="No image found :(">
    </div>
    <p>{{name}}</p>
    <a href="/album/{{id}}"></a>
  </div>
  {{/each}}
  {{/data}}
</div>
{{#if data.next}}
<a class="next" href="?offset={{nextoffset}}">Next page</a>
{{/if}}